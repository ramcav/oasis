{
    "builds": [
    {
        "src": "backend/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
    },
    {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles_build"
        }
    }
    ],
    "routes": [
      {
        "src": "/static/(.*)", 
        "dest": "/staticfiles_build/$1"
      },
      {
        "src": "/api/(.*)",
        "dest": "backend/wsgi.py"
      }
    ]
  }
  